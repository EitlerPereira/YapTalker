<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="ForumTopicTitle" tools:keep="@style/ForumTopicTitle">
    <item name="android:textStyle">bold</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="ForumTopicAuthor" parent="NewsAuthorNickname" tools:keep="@style/ForumTopicAuthor">
    <item name="android:textStyle">normal</item>
  </style>

  <style name="ForumTopicAnswers" parent="CommonSupportingText" tools:keep="@style/ForumTopicAnswers">
    <item name="android:textStyle">italic</item>
  </style>

</resources>
