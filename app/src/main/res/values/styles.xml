<resources>

  <!-- LIGHT THEME -->
  <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
    <!-- Base -->
    <item name="colorPrimary">@color/colorPrimaryL</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDarkL</item>
    <item name="colorAccent">@color/colorAccentL</item>
    <item name="android:windowBackground">@color/material_color_grey_100</item>
    <!-- Text -->
    <item name="android:textColorPrimary">@color/material_color_grey_600</item>
    <item name="android:textColorPrimaryInverse">@color/material_color_white</item>
    <item name="android:textColorSecondary">@color/material_color_grey_500</item>
    <item name="android:textColorSecondaryInverse">@color/material_color_grey_500</item>
    <!-- CardView -->
    <item name="cardBackgroundColor">@color/material_color_white</item>
    <!-- Preferences -->
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <!-- Custom attr colors -->
    <item name="colorQuoteBackground">@color/material_color_grey_200</item>
  </style>

  <!-- DARK THEME -->
  <style name="AppTheme.Dark" parent="MaterialDrawerTheme.Light.DarkToolbar">

  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.Settings">
    <item name="windowActionBar">true</item>
    <item name="windowNoTitle">false</item>
  </style>

  <!-- Video activity theme -->
  <style name="AppTheme.DarkBackground" parent="AppTheme.NoActionBar">
    <item name="android:windowBackground">@color/material_color_black</item>
  </style>

  <!-- Overlays -->
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
