<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/topic_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
      android:id="@+id/posts_list_card"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginBottom="@dimen/material_card_edge_margin"
      android:elevation="@dimen/material_card_elevation_resting"
      tools:targetApi="lollipop">

      <android.support.v7.widget.RecyclerView
        android:id="@+id/topic_posts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

  </android.support.v4.widget.SwipeRefreshLayout>

  <include
    android:id="@+id/navigation_panel"
    layout="@layout/include_navigation_panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_card_edge_margin"
    android:layout_gravity="bottom|center_horizontal"/>

</FrameLayout>