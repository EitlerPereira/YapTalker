<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/card_margin_value_half">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/news_info_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:paddingStart="@dimen/material_card_edge_margin"
      android:paddingEnd="@dimen/material_card_edge_margin"
      android:ellipsize="end"
      android:maxLines="1"
      android:textSize="@dimen/card_head_text_size"
      tools:text="Administrator - Abcdefghijklmnop"/>

    <TextView
      android:id="@+id/news_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_below="@id/news_info_text"
      android:paddingBottom="@dimen/material_card_gutter"
      android:paddingStart="@dimen/material_card_edge_margin"
      android:paddingEnd="@dimen/material_card_edge_margin"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/material_color_grey_500"
      android:textSize="@dimen/card_head_text_size"
      tools:text="12.08.2017 - 16:26"/>

    <TextView
      android:id="@+id/news_rating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:paddingTop="@dimen/material_card_edge_margin"
      android:paddingBottom="@dimen/material_card_edge_margin"
      android:paddingStart="@dimen/material_card_edge_margin"
      android:paddingEnd="@dimen/material_card_edge_margin"
      android:background="@color/material_color_green_500"
      android:textColor="@color/material_color_white"
      android:textSize="@dimen/material_card_title_block_small_text_size"
      tools:ignore="RelativeOverlap"
      tools:text="+1000"/>

    <TextView
      android:id="@+id/news_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/news_date"
      android:paddingStart="@dimen/material_card_edge_margin"
      android:paddingEnd="@dimen/material_card_edge_margin"
      android:ellipsize="end"
      android:maxLines="2"
      android:textSize="@dimen/material_card_title_block_small_text_size"
      tools:text="Here is a long news title, here is a long news title here"/>

    <WebView
      android:id="@+id/news_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/news_title"
      android:paddingTop="@dimen/material_card_edge_margin"
      android:paddingBottom="@dimen/material_card_edge_margin"
      android:paddingStart="@dimen/material_card_edge_margin"
      android:paddingEnd="@dimen/material_card_edge_margin"/>

  </RelativeLayout>

</android.support.v7.widget.CardView>

